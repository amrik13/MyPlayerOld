<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center_horizontal"
                android:id="@+id/bollyCardId"
                android:background="@drawable/indian"
                android:clickable="true"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="2.0dip"
                app:cardCornerRadius="10.0dip">
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/indian"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_gravity="center_horizontal"
                android:id="@+id/hollyCardId"
                android:background="@drawable/los"
                android:clickable="true"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="2.0dip"
                app:cardCornerRadius="10.0dip">
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/los"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_gravity="center_horizontal"
                android:id="@+id/pujbCardId"
                android:background="@drawable/punjabi"
                android:clickable="true"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="2.0dip"
                app:cardCornerRadius="10.0dip">
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/punjabi"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_gravity="center_horizontal"
                android:id="@+id/motivationCardId"
                android:background="@drawable/ment"
                android:clickable="true"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="2.0dip"
                app:cardCornerRadius="10.0dip">
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/ment"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            app:cardCornerRadius="7.0dip">
            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="fill_parent"
                android:layout_height="200.0dip"
                app:animateOnBoundary="false"
                app:autoPlay="true"
                app:fillColor="#ffffffff"
                app:pageColor="#00000000"
                app:pageTransformInterval="1800"
                app:pageTransformer="slide_over"
                app:radius="0.0dip"
                app:slideInterval="3200"
                app:strokeColor="#ff777777"
                app:strokeWidth="1.0dip" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView android:textSize="15.0sp"
                android:textColor="#ff000000"
                android:padding="5.0dip"
                android:layout_weight="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="Featured Artists"
                android:fontFamily="sans-serif" />
                <TextView android:textSize="13.0sp"
                    android:layout_weight="1"
                    android:textColor="#670000"
                    android:padding="5.0dip"
                    android:id="@+id/more_fetured_id"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="More"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/artistRecyclerViewId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView android:textSize="15.0sp"
                android:textColor="#ff000000"
                android:padding="5.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="Latest Songs"
                android:fontFamily="sans-serif" />
            <TextView android:textSize="13.0sp"
                android:layout_weight="1"
                android:textColor="#670000"
                android:padding="5.0dip"
                android:id="@+id/more_latest_id"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="More"
                android:fontFamily="sans-serif" />
        </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/latestSongRecyclerViewId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView android:textSize="15.0sp"
                android:textColor="#ff000000"
                android:padding="5.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="Discover"
                android:fontFamily="sans-serif" />
            <TextView android:textSize="13.0sp"
                android:layout_weight="1"
                android:textColor="#670000"
                android:padding="5.0dip"
                android:id="@+id/more_discover_id"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="More"
                android:fontFamily="sans-serif" />
        </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/generRecyclerViewId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>